{
  "version": 2,
  "builds": [
    { 
      "src": "api/webhook.js", 
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/webhook", 
      "dest": "/api/webhook",
      "methods": ["POST"]
    },
    {
      "src": "/health",
      "dest": "/api/webhook",
      "methods": ["GET"]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}